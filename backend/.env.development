# Development Environment Variables
NODE_ENV=development
PORT=8000

# Database - Railway will provide this in production
DATABASE_URL="postgresql://localhost:5432/deepresearcher_dev"

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Development settings
LOG_LEVEL=debug
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000

# Set to skip database initialization in development
SKIP_DATABASE=true
SKIP_REDIS=true
SKIP_QUEUE=true

# Optional for full functionality (not required for basic testing)
# OPENAI_API_KEY=sk-your-key-here
# REDIS_URL=redis://localhost:6379
# SERP_API_KEY=your-key-here
