# Environment Configuration

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/deepresearcher"
DATABASE_TEST_URL="postgresql://postgres:password@localhost:5432/deepresearcher_test"

# Redis
REDIS_URL="redis://localhost:6379"

# OpenAI
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_MODEL="gpt-4"

# External APIs
ARXIV_API_URL="http://export.arxiv.org/api/query"
PUBMED_API_KEY="your_pubmed_api_key"
SEMANTIC_SCHOLAR_API_KEY="your_semantic_scholar_api_key"
NEWS_API_KEY="your_news_api_key"
CROSSREF_API_URL="https://api.crossref.org"

# Authentication
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_password"

# File Storage
STORAGE_TYPE="local" # or "s3"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_S3_BUCKET="deepresearcher-files"

# App Configuration
NODE_ENV="development"
PORT=8000
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8000"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Background Jobs
BULL_BOARD_USERNAME="admin"
BULL_BOARD_PASSWORD="password"

# Citation Management
ZOTERO_API_KEY="your_zotero_api_key"
ZOTERO_USER_ID="your_zotero_user_id"

# Monitoring
SENTRY_DSN="your_sentry_dsn"
